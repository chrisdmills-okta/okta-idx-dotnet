@model embedded_auth_with_sdk.Models.OktaVerifySelectEnrollmentChannelModel
@using embedded_auth_with_sdk.Models;
@using Okta.Idx.Sdk;

@{
    ViewBag.Title = ViewBag.Title ?? "Enroll Okta Verify";
}

<div class="row d-center">
    <div class="col-md-8">
        @using (Html.BeginForm("OktaVerifySelectEnrollmentChannel", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>More options</h4>
            <div>Which option do you want to try?</div>

            <div class="form-group">
                @foreach (OktaVerifySelectEnrollmentChannelParameterModel remediationOptionParameter in Model.RemediationOptionParameters)
                {
                    @Html.RadioButton(remediationOptionParameter.Name, remediationOptionParameter.Value, new { id = $"{remediationOptionParameter.Value}_Id" });
                    <label for="@($"{remediationOptionParameter.Value}_Id")">@remediationOptionParameter.LabelText</label>
                    <br />
                }
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Next" class="btn btn-primary btn-stretch-wide" />
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
